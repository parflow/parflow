#
#  Makefile for parflow tools.
# 

PROJECT       = parflow

PARFLOW	      =	@top_srcdir@
SRCDIR	      =	@srcdir@
SUBDIR        = docs/amps_manual
VPATH	      =	@srcdir@
OBJECT        = ../..

include $(OBJECT)/config/Makefile.config

MANUAL=amps_manual
INSTALL_DIR = $(PARFLOW_INSTALL_DIR)/docs/amps_manual

LINK_FILES = do_online \
	     inputps.tex \
             html.sty \
             html.perl \
	     parflow.sty \
             parflow.perl \
             parflow.bib

ONLINE_OPTS =\
 -show_section_numbers\
 -bottom_navigation

FILES =\
 manual.tex \
 version.tex

all:

doc:  manual.ps manual/manual.html

version.tex : $(PARFLOW)/../parflow/parflow_lib/version.h
	echo "\def\PFVersion{"`cut -d$ -f2 $(PARFLOW)/../parflow/parflow_lib/version.h`"}" > version.tex

manual.ps: manual.dvi
	@dvips -o manual.ps manual

manual/manual.html: manual.dvi
	@latex2html $(ONLINE_OPTS) manual.tex
	@./do_online manual

#	bibtex manual
manual.dvi: Makefile $(FILES)
	@for i in ${LINK_FILES}; do     \
	   if [ ! -h $$i ] ; then    \
	     ln -s ../lib/$$i . ;\
	   fi \
	done 
	@latex manual
	@bibtex manual
	@makeindex manual.idx
	@latex manual
	@latex manual
install:

doc_install:
	@$(INSTALL) -d -m 755 $(INSTALL_DIR)/$(MANUAL)_html
	@for i in manual/*; do				        \
	   $(INSTALL) -c -m 644 $$i $(INSTALL_DIR)/$(MANUAL)_html; \
	done
	@$(INSTALL) -c -m 644 manual.ps $(INSTALL_DIR)/$(MANUAL).ps

clean:
	$(PARFLOW_CLEAN)

veryclean: clean
	@for i in ${LINK_FILES}; do     \
	   if [ -h $$i ] ; then    \
	    rm $$i ; \
	   fi \
	done 
	@/bin/rm -f  version.tex manual.ps Makefile
	@/bin/rm -fr manual

